<%- include("partials/header") %>

<div class="ui container register">
	<h1 class="ui horizontal divider header">
	Sign Up!
	</h1>
    <form class="ui form" action="/register" method="POST">
        <div class="field">
            <label>Name</label>
            <div class="two fields">
                <div class="field">
                    <input type="text" name="firstName" placeholder="John" required>
                </div>
                <div class="field">
                    <input type="text" name="lastName" placeholder="Doe" required>
                </div>
            </div>
        </div>
        <div class="field">
            <label>Username</label>
            <input type="text" name="username" placeholder="JohnDoe123" required>
        </div>
        <div class="field">
            <label>Email</label>
            <input type="text" name="email" placeholder="johndoe@email.com" required>
        </div>
        <div class="field">
            <label>Password</label>
            <input type="password" name="password" placeholder="****************" required>
        </div>
        <div class="field">
            <div class="ui checkbox">
                <input type="checkbox" tabindex="0" required>
                <label>I agree to the Terms and Conditions</label>
            </div>
        </div>
        <button class="ui button" type="submit">Sign Up</button>
    </form>

<%- include("partials/footer") %>