<div class="ui container register">
	<h1 class="ui horizontal divider header">
	Login!
	</h1>
    <form class="ui form" action="/login" method="POST">
        <div class="field">
            <label>Username</label>
            <input type="text" name="username" placeholder="JohnDoe123" required>
