<%- include("partials/header") %>
<div class="page">
<div class="my-container">
	<div class="header">
		<div class="ui secondary menu">
			<div class="ui selection dropdown">
				<input type="hidden" name="gender">
				<i class="dropdown icon"></i>
				<div class="default text">Gender</div>
				<div class="menu">
				  <div class="item" data-value="1">Male</div>
				  <div class="item" data-value="0">Female</div>
				</div>
			</div>
			<div class="menu-box">
				<a class="active item">
					All
				  </a>
				<a class="item">
				Java
				</a>
				<a class="item">
				C#
				</a>
				<a class="item">
					JS
				</a>
				<a class="item">
					Python
				</a>
			</div>
			<div class="right menu">
			  <div class="item">
				<div class="ui icon input">
				  <input type="text" placeholder="Search...">
				  <i class="search link icon"></i>
				</div>
			  </div>
			  <div class="ui multiple dropdown blog-menu-dropdown">
				<input type="hidden" name="filters">
				<i class="filter icon blog-menu-icon"></i>
				<div class="menu">
				  <div class="ui icon search input">
					<i class="search icon"></i>
					<input type="text" placeholder="Search tags...">
				  </div>
				  <div class="divider"></div>
				  <div class="header">
					<i class="tags icon"></i>
					Tag Label
				  </div>
				  <div class="scrolling menu">
					<div class="item" data-value="important">
					  <div class="ui red empty circular label"></div>
					  Important
					</div>
					<div class="item" data-value="announcement">
					  <div class="ui blue empty circular label"></div>
					  Announcement
					</div>
					<div class="item" data-value="cannotfix">
					  <div class="ui black empty circular label"></div>
					  Cannot Fix
					</div>
					<div class="item" data-value="news">
					  <div class="ui purple empty circular label"></div>
					  News
					</div>
					<div class="item" data-value="enhancement">
					  <div class="ui orange empty circular label"></div>
					  Enhancement
					</div>
					<div class="item" data-value="off-topic">
					  <div class="ui yellow empty circular label"></div>
					  Off Topic
					</div>
					<div class="item" data-value="interesting">
					  <div class="ui pink empty circular label"></div>
					  Interesting
					</div>
					<div class="item" data-value="discussion">
					  <div class="ui green empty circular label"></div>
					  Discussion
					</div>
				  </div>
				</div>
			  </div>
			  <a href="/blogs/new">
				<button class="ui teal button blog-menu-btn">Create a blog</button>
			  </a>
			</div>
		</div>
		<!-- dropdown
		All Java C++ Python JS CSS C# PHP 
		Search Bar
		Flter
		Create a blog -->
	</div>
	<div class="my-content">
		<div class="content-item">
			<% blogs.forEach(function(blog){ %>
			<div class="box">
					<div class = "image-container">
						<div class="image">
							<img src="<%= blog.image %>">
						</div>
					</div>
					<div class="aside-container">
					</div>
			</div>
			<div class="content-container">
				<div class="title">
					<a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
				</div>
				<div class="meta">
					<span><%= blog.created.toDateString() %></span>
				</div>
				<div class="description">
					<p>
					<%- blog.body.substring(0, 100) %>...
					</p>
				</div>
				<div class="author">
					<%= blog.author %>
				</div>
			</div>	
			<div class="arrow">
				<a href="/blogs/<%= blog._id %>">
					<i class="right chevron icon"></i>
				</a>
			</div>
			<% }); %>
		</div>
	</div>
</div>
</div>
<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
<script src="/js/blogs.js"></script>
</body>
</html>