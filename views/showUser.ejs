    <script id="bigMenu" type="text/x-handlebars-template">
        <div class="ui grid">
            <div class="four wide column">
                <div class="ui vertical fluid tabular menu">
                    <a class="item active">
                        Bio
                    </a>
                    <a class="item">
                        Links
                    </a>
                    <a class="item">
                        Settings
                    </a>
                </div>
            </div>
            <div id = "parent" class="twelve wide stretched column">
            </div>
        </div>
