    <script id="bigBio" type="text/x-handlebars-template">
        <div>
            <form action="/mypage/<%= user._id %>?_method=PUT" method="POST" class="ui form">
                <textarea style="width: 100%; height: 100%;
                font-family : Lato,'Helvetica Neue',Arial,Helvetica,sans-serif" name="bio"><% if(user.bio){ %><%= user.bio %><% }else{ %>Enter your bio here<% } %></textarea>
                <button style="position: relative; left : 90%; top : -40px; 
                background-color : inherit; border : 0"><i class="ui check icon regular good"></i></button>
            </form>
        </div>
    </script>
    <script id="bigLinks" type="text/x-handlebars-template">
        <div class="ui segment">
            <ul>
            <% user.links.forEach(link => {%>
            <li>
                <i class="<%= Object.keys(link)%> icon"></i><%= Object.values(link)%>
            </li>
            <% }) %>
            </ul>
            <form action="/mypage/<%= user._id %>/links?_method=PUT" method="POST" class="ui form">
                <div class="field" style="width: 85%; display:inline-block;">
                    <div style="width: 100%; display:inline-block;margin-right: 1vw;">
                        <label>Social Media</label>
                    <select class="ui fluid dropdown">
                        <option value="instagram">Instagram</option>
                        <option value="facebook">Facebook</option>
                        <option value="twitter">Twitter</option>
                        <option value="github">GitHub</option>
                        <option value="linkedin">LinkedIn</option>
                    </select>
                    </div>
                </div>
                <div style="position: absolute; top: 3.5vh; left: 52.5vw;">
                    <i class="ui plus circle icon good" style="font-size: 3rem;"></i>
                </div>
                <div id="anchor"></div>
                <div id="form-button" class="hidden" style="margin-top: 3vh;">
                    <button class="ui button" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </script>
    <script id="bigSettings" type="text/x-handlebars-template">
        <div class="ui segment">
            <form action="/mypage/<%= user._id %>?_method=PUT" method="POST" class="ui form">
                <div class="field">
                    <label>First Name</label>
                    <% if(user.firstName) {%>
                    <input type="text" name="firstName" value = "<%= user.firstName %>" placeholder="First Name">
                    <%}else { %>
                    <input type="text" name="firstName" placeholder="First Name">
                    <% } %>
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <% if(user.lastName) {%>
                    <input type="text" name="lastName" value = "<%= user.lastName %>" placeholder="First Name">
                    <%}else { %>
                    <input type="text" name="lastName" placeholder="Last Name">
                    <% } %>
                </div>
                <button class="ui button" type="submit">Submit</button>
            </form>
        </div>
    </script>
